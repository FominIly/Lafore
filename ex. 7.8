#include "pch.h"
#include <iostream>

const int MAX = 10;
int limit[MAX];

class safearray
{
	int limit[10];
public:
	void putel(int n, int p)
	{
		if (p > 9 || p < 0)
			std::cout << "The index exceeds the array size!" << std::endl;
		else
			limit[n] = p;
	}
	void getel(int n)
	{
		if(n > 9 || n < 0)
			std::cout << "The index exceeds the array size!" << std::endl;
		else
			std::cout << limit[n];
	}
};

int main()
{
	safearray one;
	one.putel(1, 12);
	one.getel(19);

	return 0;
}
