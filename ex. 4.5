#include "pch.h"
#include <iostream>

using namespace std;


long zerosmaller(int hours, int minutes, int sec);

int main()
{
	int hours, minutes, sec;
	
	do 
	{
		cout << "Enter the numbers: ";
		cin >> hours >> minutes >> sec;
		
		cout << "The answer is " << zerosmaller(hours, minutes, sec) << endl;

		
		cout << "Once again? - y/n: " << endl;
		getchar();

	} while (getchar() == 'y');

	return 0;
}

long zerosmaller(int hours, int minutes, int sec)
{
	long ans = sec + minutes * 60 + hours * 3600;

	return ans;
}
